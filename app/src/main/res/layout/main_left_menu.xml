<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nav_avatar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/head_boy" />

        <cn.nicolite.huthelper.view.customView.RichTextView
            android:id="@+id/tv_nav_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:clickable="true"
            android:paddingEnd="0dp"
            android:paddingStart="35dp"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="14sp"
            view:drawable_height="16dp"
            view:drawable_location="right"
            view:drawable_src="@drawable/ic_pencil"
            view:drawable_width="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_private_message"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="私信"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/sixin"
                view:drawable_width="30dp" />


            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_update"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="8dp"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="检查更新"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/jianchagengxin"
                view:drawable_width="30dp" />

            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_share"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="8dp"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="分享应用"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/fenxiang"
                view:drawable_width="30dp" />

            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_logout"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="8dp"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="切换用户"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/qiehuanzhanghu"
                view:drawable_width="30dp" />

            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_about"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="8dp"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="关于"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/guanyu"
                view:drawable_width="30dp" />

            <cn.nicolite.huthelper.view.customView.RichTextView
                android:id="@+id/tv_nav_fback"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="start|center_horizontal"
                android:layout_marginTop="8dp"
                android:drawablePadding="20dp"
                android:gravity="start|center_vertical"
                android:padding="6dp"
                android:text="反馈"
                android:textColor="@color/white"
                android:textSize="16sp"
                view:drawable_height="30dp"
                view:drawable_location="left"
                view:drawable_src="@drawable/fankui"
                view:drawable_width="30dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
