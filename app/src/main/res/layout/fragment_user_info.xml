<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/rl_user_headview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="头像"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_user_headview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/head_boy" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <FrameLayout
            android:id="@+id/rl_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="昵称"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:id="@+id/rl_user_bio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="签名"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_bio_kt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="没有签名"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:id="@+id/rl_user_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="点击可修改"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:id="@+id/rl_user_college"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="学院"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="计算机与通信学院"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:id="@+id/rl_user_class"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="班级"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="数学应用1701"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:id="@+id/rl_user_qq"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="2350156896"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_name_kt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="助手"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="性别"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_user_gender"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:src="@drawable/male" />
        </FrameLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:text="学号"
                android:textColor="@color/dull_grey"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_user_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:text="100000000"
                android:textColor="@color/light_grey"
                android:textSize="13sp" />
        </FrameLayout>


    </LinearLayout>
</ScrollView>